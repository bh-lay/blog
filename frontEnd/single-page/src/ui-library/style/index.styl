.ui-loading-layer
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	background rgba(255, 255, 255, .8)
	transition .4s ease-in-out
	div
		position relative
		height 100%
		max-height 600px
		display flex
		justify-content center
		align-items center
	span
		font-size 16px
	&.ui-loading-layer-hidden
		visibility hidden
		opacity 0
.ui-lazy-image-placeholder
	opacity .05
	background url('../images/lazy-placeholder.svg') no-repeat center
	background-size 50px 50px
.ui-lazy-image-loaded
	transition 1.2s
	opacity 1